<h2 class='content'>Add a  new Book</h2>


<%= form_for(@book) do |form| %>  
    
      <%= form.label :title %> 
      <%= form.text_field(:title) %>
  
      <%= form.label :author %> 
      <%= form.text_field(:author) %>
  
      <%= form.label :genre %>
      <%= form.select("genre", @genres, {index: nil}) %>
      <%#= form.text_field(:genre) %>
  
      <%= form.label :price %> 
      <%= form.number_field :price, step: :any %>

      <%= form.label :published_date%> 
      <%= form.date_field(:published_date) %>     
      <%= form.submit("Create Book") %>


  <% end %>