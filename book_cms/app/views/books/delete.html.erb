<h2>Delete a Book</h2>
<%= form_for(@book, :method => 'delete') do |form| %>
    <p class="content">Are you sure you want to delete this book?</p>
    <p class="content">ID: <%=form.object.id%></p>
    <p class="content">Title: <%=form.object.title%></p>
    <%= form.submit("Delete Book")%>
    <%end%>
