<% if !flash[:notice].blank?%>
    <div>
        <%=flash[:notice]%>
    </div>
<%end%>

<div class="content">
    <h2>Books</h2>
    <table class="listing" summary="Book list">
    <% @books.each do |book| %>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.price %></td>
        <td><%= book.published_date %></td>
        <td class="actions">
            <%= link_to("Details", {:action => 'show', :id => book.id}, :class => 'action show') %>
            <%= link_to("Update", edit_book_path(book), :class => 'action edit') %>
            <%= link_to("Delete", delete_book_path(book), :class => 'action delete') %>
        </td>
        </tr>
    <%end%>
    </table>
</div>

